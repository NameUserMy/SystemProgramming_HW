<Window x:Class="SystemProgramming_HW_8.Start.View.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemProgramming_HW_8.Start.View"
        mc:Ignorable="d"
        Title="StartView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Height="20" Margin="5,5,5,2.5" Name="firstBooton" Content="Different task" Click="firstBooton_Click"></Button>
            <Button Height="20" Margin="5,5,5,2.5" Name="secondBooton" Content="Async file" Click="secondBooton_Click" ></Button>
            
        </StackPanel>
        <ContentControl x:Name="CC" Grid.Column="1" ></ContentControl>
    </Grid>
</Window>
